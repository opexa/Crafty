@*@model SearchViewModelBag*@
@model IEnumerable<ConciseItemViewModel>

@{ ViewBag.Title = "Търсене"; }
@section styles {
  <link rel="stylesheet" href="~/Stylesheets/columns_layout.css">
  <link rel="stylesheet" href="~/Stylesheets/search-word.css">
}

<div class="page-heading">
  <i class="fa fa-search"></i>&nbsp;
  Резултати за:
  @*<span class="search-word">@Model.TargetWord</span>*@
  <span class="search-word">@ViewBag.TargetWord</span>
</div>

<div class="suggested-items-by-title">
  <div class="section-title">
    Обяви с подобно име или описание:
  </div>
  @if(Model.Count() == 0 )
  {
    <div class="missing">Няма намерени съвпадения</div>
  }
  else
  {
    <div class="columns items-container">
      @Html.DisplayForModel()
    </div>
  }
</div>

