                </div>
                <div class="img-upload-btn" data-input-id="8"><i class="glyphicon glyphicon-picture"></i></div>
                @Html.TextBoxFor(model => model.Pictures, new { @class = "btn btn-primary item-img-upload", type = "file", data_field_id = "8" })
              </td>
              <td>
                <div class="preview-layer img-remove-preview preview-hidden" data-show-id="9">
                  <img src="" alt="" />
                  <i class="glyphicon glyphicon-remove-circle"></i>
                </div>
                <div class="img-upload-btn" data-input-id="9"><i class="glyphicon glyphicon-picture"></i></div>
                @Html.TextBoxFor(model => model.Pictures, new { @class = "btn btn-primary item-img-upload", type = "file", data_field_id = "9" })
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="form-group">
      <div class="input-holder">
        <input type="submit" value="Добави" class="btn" />
      </div>
    </div>
  </div>
}
