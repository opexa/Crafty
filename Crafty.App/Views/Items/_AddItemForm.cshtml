                @Html.TextBoxFor(model => model.Pictures, new { @class = "btn btn-primary item-img-upload", type = "file", data_field_id = "3" })
              </td>
            </tr>
            <tr>
              <td>
                <div class="preview-layer img-remove-preview preview-hidden" data-show-id="4">
                  <img src="" alt="" />
                  <i class="glyphicon glyphicon-remove-circle"></i>
                </div>
                <div class="img-upload-btn" data-input-id="4"><i class="glyphicon glyphicon-picture"></i></div>
                @Html.TextBoxFor(model => model.Pictures, new { @class = "btn btn-primary item-img-upload", type = "file", data_field_id = "4" })
              </td>
              <td>
