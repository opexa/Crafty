@model ExternalLoginListViewModel
@using Microsoft.Owin.Security

<h4>Влез чрез социална мрежа.</h4>
<hr />
@using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = Model.ReturnUrl }))
{
  @Html.AntiForgeryToken()
  <div id="socialLoginList">
    <p>
      <button type="submit" class="submit-button-login" id="Facebook" name="provider" value="Facebook" title="Log in using your Facebook account">
        <i class="fa fa-facebook-f"></i>
      </button>
      <button type="submit" class="submit-button-login" id="Google" name="provider" value="Google" title="Log in using your Google account">
        <i class="fa fa-google-plus"></i>
      </button>
    </p>
  </div>
}
